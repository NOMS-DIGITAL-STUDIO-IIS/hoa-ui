extends ../layout

block content
    include ../includes/back-button.jade

    if err
        include ./searchError

    div.grid-row
        div.column-two-thirds
            h1#formTitle.heading-xlarge= content.title

            form(name="search-prisoner-form", method="post")
                input(type="hidden" name="_csrf" value="#{csrfToken}")

                block search-page

                div.form-group
                    button.button#continue Continue

    if hints && hints.indexOf('wildcard') > -1
        details.grid-row.column-two-thirds.initiallyHidden.hint.namesHint
            summary
                span.summary Use the % symbol for wildcard searches
            div.panel.panel-border-narrow
                p A wildcard search will return all records that match the section of the text up to the % symbol
                p For example, John% will return all names beginning with John such as John, Johnson and Johnston

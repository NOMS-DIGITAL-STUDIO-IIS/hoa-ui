extends ../layout

block content
    include ../includes/back-button.jade
    if err
        div(id="errors" class="error-summary", role="group", aria-labelledby="error-message", tabindex="-1")
            h1(class="heading-medium error-summary-heading", id="error-message") #{err.title}
            if err.desc
                p= err.desc

            if err.items.length > 0
                ul.error-summary-list
                    each item in err.items
                        li
                            each val, index in item
                                a(href="##{index}") #{val}

    div.grid-row
        div.column-two-thirds
            h1.heading-xlarge= content.title

            form(method="post")
                input(type="hidden" name="_csrf" value="#{csrfToken}")

                block search-page

                div.form-group
                    button.button#continue Continue

    if hints && hints.indexOf('wildcard') > -1
        details
            summary
                span.summary Use the % symbol for wildcard searches
            div.panel.panel-border-narrow
                p A wildcard will return all records that match the section of the text up to the % symbol.
                p e.g. John% will return all names beginning with John such as John, Johnson and Johnston.

extends ../layout

block content

    if err
        div(class="error-summary", role="group", aria-labelledby="error-message", tabindex="-1")
            h1(class="heading-medium error-summary-heading", id="error-message") #{err.title}
            if err.desc
                p= err.desc
                
            if err.items.length > 0
                ul.error-summary-list
                    each item in err.items
                        li
                            each val, index in item
                                a(href="##{index}") #{val}
                    
    div.grid-row
        div.column-two-thirds
            h1.heading-xlarge= content.title

            form(method="post")
                
                block search-page
                
                div.form-group
                    button.button Continue
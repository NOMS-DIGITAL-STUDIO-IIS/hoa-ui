block search-page
    div.form-group
        label(for="forename")
            span.form-label-bold Forename

        if nameQuery
            input.form-control#forename(type="text", name="forename", maxlength="13" value="#{nameQuery.forename}")
        else
            input.form-control#forename(type="text", name="forename", maxlength="13")

    div.form-group
        label(for="forename2")
            span.form-label-bold Middle name
            span.form-hint Previously known as forename 2

        if nameQuery
            input.form-control#forename2(type="text", name="forename2", maxlength="13" value="#{nameQuery.forename2}")
        else
            input.form-control#forename2(type="text", name="forename2", maxlength="13")


    div.form-group
        label(for="surname")
            span.form-label-bold Surname

        if nameQuery
            input.form-control#surname(type="text", name="surname", maxlength="26" value="#{nameQuery.surname}")
        else
            input.form-control#surname(type="text", name="surname", maxlength="26")



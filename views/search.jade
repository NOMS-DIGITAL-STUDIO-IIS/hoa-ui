extends layout

block content

    if err
        div(id="errors" class="error-summary", role="group", aria-labelledby="error-message", tabindex="-1")
            h1(class="heading-medium error-summary-heading", id="error-message")= err.title
            if err.desc
                p= err.desc
            ul.error-summary-list
                li
                    a(href="#identifier") Select at least one option to continue

    div.grid-row
        div.column-two-thirds
            h1.heading-xlarge= content.title

    div.grid-row
        div.column-full
            p.bold-small= content.body

            form(method="post", name="formSearch")
                div.form-group
                    fieldset
                        legend.visually-hidden= content.heading

                        input(type="hidden" name="_csrf" value="#{csrfToken}")

                        div.multiple-choice
                            input#identifier(name="option", type="checkbox", value="identifier")
                            label(for="identifier")
                                | Unique identifier

                        div.multiple-choice
                            input#names(name="option", type="checkbox", value="names")
                            label(for="names")
                                | Name(s)

                        div.multiple-choice
                            input#dob(name="option", type="checkbox", value="dob")
                            label(for="dob")
                                | Date of birth or age


                div.form-group
                    button.button#continue Continue

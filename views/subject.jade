extends layout

block content
    include includes/back-button.jade
    if err
        div(class="error-summary", role="group", aria-labelledby="error-message", tabindex="-1")
            h1(class="heading-medium error-summary-heading", id="error-message")= err.title
            
    div#print-header(aria-hidden="true")
        span GOV.UK - Inmate information system

    div#print-disclaimer(aria-hidden="true")
        p.title Disclaimer
        p In euismod nulla nec diam ullamcorper, in posuere magna rhoncus. Aliquam erat volutpat. Suspendisse at dolor mattis, euismod ligula non, placerat eros. Etiam sollicitudin rutrum tincidunt.

    if !err
        div.grid-row
            div.column-two-thirds
                - var forename2 = subject.INMATE_FORENAME_2.value
                - var forename = subject.INMATE_FORENAME_1.value
                h1.heading-xlarge#subjectName= (forename[0] + forename.substr(1, forename.length - 1).toLowerCase() + ' ' + (forename2 ? forename2[0] + forename2.substr(1, forename2.length - 1).toLowerCase() + ' ' : '') + subject.INMATE_SURNAME.value)
                    span.heading-secondary#subjectId PRISON NO. #{subject.PK_PRISON_NUMBER.value}

                p.font-medium
                    | #{subject.MARITAL_STATUS.value}
                    | #{subject.ETHNICITY.value}
                    | #{subject.INMATE_SEX.value}
                    | #{subject.NATIONALITY.value ? 'from ' + subject.NATIONALITY.value : ''}
                    | #{(subject.MARITAL_STATUS.value) || (subject.MARITAL_STATUS.value) || (subject.MARITAL_STATUS.value) ? '. ' : '' }
                    | #{(subject.BIRTH_COUNTRY.value) || (subject.DOB.value) ? 'Born' : ''}
                    | #{subject.BIRTH_COUNTRY.value ? ' in ' + subject.BIRTH_COUNTRY.value : ''}
                    | #{subject.DOB.value ? ' on ' + subject.DOB.value + ' ('+subject.AGE+' years)' : ''}
                    
                div.form-group 
                    button.button(onclick="window.print();") Print
                    
        section
            div.grid-row
                div.column-one-third
                    span Navigation

                div.column-two-thirds
                    span Details

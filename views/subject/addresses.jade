extends ../subject

block subject-details
    div.column-two-thirds
        each val,index in data.details
            div.grid-row.list-row
                div.column-full
                    div.left-border.capitalise-text
                        span.quiet.block  #{val.type ? val.type.toLowerCase() : 'Unknown'}
                        div #{val.addressLine1.toLowerCase()}
                        div #{val.addressLine2 ? val.addressLine2.toLowerCase() : ''}
                        div #{val.addressLine4 ? val.addressLine4.toLowerCase() : ''}




        if (!data.details)
            span= data.noResultsText

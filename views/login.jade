extends layout

block content
    div.grid-row
        div.column-full
            h1.heading-xlarge Sign in
            form(method="post")
                div.form-group
                    label(for="login_id")
                        span.form-label User ID
                    input(type="text",  id="login_id", class="form-control", name="login_id")
                    
                div.form-group
                    label(for="pwd")
                        span.form-label Password
                    input(type="password", id="pwd", class="form-control", name="pwd")
                
                p= msg
                
                div.form-group
                    button.button Sign in